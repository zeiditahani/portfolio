<!-- Start Projects Area -->
    <div class="rbt-course-area bg-color-white" >
        <div class="container">
            <!-- Start Card Area -->
            <div class="row g-5">

                <!-- Start Single Course  -->
                {%for a in projects%}
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="rbt-card variation-01 rbt-hover">
                        <div class="rbt-card-img">
                            <a href="{{path('show_project',{'id':a.id})}}">
                                <img src="{{ asset('uploads/'~a.image)}}" alt="{{a.altimage}}">
                            </a>
                        </div>
                        <div class="rbt-card-body">
                            <ul class="rbt-meta">
                                {%for l in a.langage%}
                                       {{l.title}}
                                {%endfor%}
                            </ul>
                            <h4 class="rbt-card-title"><a href="{{path('show_project',{'id':a.id})}}">{{a.title}}</a>
                            </h4>
                            <p class="rbt-card-text">{{a.description}}</p>
                            <div class="rbt-card-bottom">
                                <a class="rbt-btn-link" href="{{path('show_project',{'id':a.id})}}">Learn
                                    More<i class="feather-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {%endfor%}
                <!-- End Single Course  -->

            </div>
            <!-- End Card Area -->
        </div>
    </div>
    <!-- End Projects Area -->

